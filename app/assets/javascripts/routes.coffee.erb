root = global ? window
angular = root.angular

thisApp = angular.module("TournamentClient", ['ngCookies', 'fields', 'competitions', 'competitors', 'categories', 'clubs', 'countries']).config(['$routeProvider', '$locationProvider' , 
($routeProvider, $locationProvider) ->
  #$locationProvider.hashPrefix('');
  $locationProvider.html5Mode true
  $routeProvider.when("/",
    controller: "WelcomeCtrl"
    templateUrl: "<%= asset_path('welcome/index.html') %>"
  ).when("/countries", 
    controller: CountriesIndexCtrl
    templateUrl: '<%= asset_path("countries/index.html") %>'
  ).when("/countries/new",
    controller: CountriesCreateCtrl
    templateUrl: '<%= asset_path("countries/new.html") %>'
  ).when("/countries/:id",
    controller: CountriesShowCtrl
    templateUrl: '<%= asset_path("countries/show.html") %>'
  ).when("/countries/:id/edit",
    controller: CountriesEditCtrl
    templateUrl: '<%= asset_path("countries/edit.html") %>'
  ).when("/clubs", 
    controller: ClubsIndexCtrl
    templateUrl: '<%= asset_path("clubs/index.html") %>'
  ).when("/clubs/new",
    controller: ClubsCreateCtrl
    templateUrl: '<%= asset_path("clubs/new.html") %>'
  ).when("/clubs/:id",
    controller: ClubsShowCtrl
    templateUrl: '<%= asset_path("clubs/show.html") %>'
  ).when("/clubs/:id/edit",
    controller: ClubsEditCtrl
    templateUrl: '<%= asset_path("clubs/edit.html") %>'
  ).when("/categories", 
    controller: CategoriesIndexCtrl
    templateUrl: '<%= asset_path("categories/index.html") %>'
  ).when("/categories/new",
    controller: CategoriesCreateCtrl
    templateUrl: '<%= asset_path("categories/new.html") %>'
  ).when("/categories/:id",
    controller: CategoriesShowCtrl
    templateUrl: '<%= asset_path("categories/show.html") %>'
  ).when("/categories/:id/edit",
    controller: CategoriesEditCtrl
    templateUrl: '<%= asset_path("categories/edit.html") %>'
  ).when("/competitors", 
    controller: CompetitorsIndexCtrl
    templateUrl: '<%= asset_path("competitors/index.html") %>'
  ).when("/competitors/new",
    controller: CompetitorsCreateCtrl
    templateUrl: '<%= asset_path("competitors/new.html") %>'
  ).when("/competitors/:id",
    controller: CompetitorsShowCtrl
    templateUrl: '<%= asset_path("competitors/show.html") %>'
  ).when("/competitors/:id/edit",
    controller: CompetitorsEditCtrl
    templateUrl: '<%= asset_path("competitors/edit.html") %>'
  ).when("/competitions", 
    controller: CompetitionsIndexCtrl
    templateUrl: '<%= asset_path("competitions/index.html") %>'
  ).when("/competitions/new",
    controller: CompetitionsCreateCtrl
    templateUrl: '<%= asset_path("competitions/new.html") %>'
  ).when("/competitions/:id",
    controller: CompetitionsShowCtrl
    templateUrl: '<%= asset_path("competitions/show.html") %>'
  ).when("/competitions/:id/edit",
    controller: CompetitionsEditCtrl
    templateUrl: '<%= asset_path("competitions/edit.html") %>'
  ).when("/fields", 
    controller: FieldsIndexCtrl
    templateUrl: '<%= asset_path("fields/index.html") %>'
  ).when("/fields/new",
    controller: FieldsCreateCtrl
    templateUrl: '<%= asset_path("fields/new.html") %>'
  ).when("/fields/:id",
    controller: FieldsShowCtrl
    templateUrl: '<%= asset_path("fields/show.html") %>'
  ).when("/fields/:id/edit",
    controller: FieldsEditCtrl
    templateUrl: '<%= asset_path("fields/edit.html") %>'
  ).otherwise redirectTo: "/"
])

root.thisApp = thisApp

