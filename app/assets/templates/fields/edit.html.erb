<form name="editField">
  <fieldset>
    <legend>
      Edit Field
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="field[name]"
                   ng-model="field.name"
                   class="text_field"
                   required>
          <span ng-show="editField.name.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Competition
        </label>
        <div class="controls">
            <input type="number"
                   name="field[competition_id]"
                   ng-model="field.competition_id"
                   class="number_field"
                   required>
          <span ng-show="editField.competition_id.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
    <div class="form-actions">
      <button class="btn btn-success" ng-click="save()"
        ng-disabled="isClean() || editField.$invalid">
        Save
      </button>
      <button ng-click="destroy()"
              ng-show="field.id"
              class="btn btn-danger">
              <i class="icon-trash"></i>Delete
      </button>
      <a href="/fields" class="btn">
        Back to fields
      </a>
    </div>
  </fieldset>
</form>

