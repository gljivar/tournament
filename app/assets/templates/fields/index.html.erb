<h1>Fields</h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>Name</th>
        <th>Competition</th>
      <th ng-show="TournamentGlobal.loggedIn">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="field in fields">
      <td>
        <a href="/fields/{{field.id}}">
          {{field.name}}
        </a>
      </td>
        <td>
          {{field.competition.name}}
        </td>
      <td ng-show="TournamentGlobal.loggedIn">
        <a href="/fields/{{field.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a ng-show="TournamentGlobal.loggedIn" href='/fields/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
