<form name="newCategory">
  <fieldset>
    <legend>
      New Category
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="category[name]"
                   ng-model="category.name"
                   class="text_field"
                   required>
          <span ng-show="newCategory.name.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Comment
        </label>
        <div class="controls">
            <input type="text"
                   name="category[comment]"
                   ng-model="category.comment"
                   class="text_field"
                   required>
          <span ng-show="newCategory.comment.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
    <div class="form-actions">
      <button class="btn btn-success" ng-click="save()"
        ng-disabled="isClean() || newCategory.$invalid">
        <i class="icon-save"></i> Save
      </button>
      <button ng-click="destroy()"
              ng-show="category.id"
              class="btn btn-danger">
              <i class="icon-trash"></i> Delete
      </button>
      <a href="/categories" class="btn">Back to categories</a>
    </div>
  </fieldset>
</form>

