<h1>Categories</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comment</th>
      <th ng-show="TournamentGlobal.loggedIn">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="category in categories">
      <td>
        <a href="/categories/{{category.id}}">
          {{category.name}}
        </a>
      </td>
        <td>
          {{category.comment}}
        </td>
      <td ng-show="TournamentGlobal.loggedIn">
        <a href="/categories/{{category.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a ng-show="TournamentGlobal.loggedIn" href='/categories/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
