<h1>Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th ng-show="TournamentGlobal.loggedIn">Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="user in users">
      <td>
        <a href="/users/{{user.id}}">
          {{user.username}}
        </a>
      </td>
      <td ng-show="TournamentGlobal.loggedIn">
        <a href="/users/{{user.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a ng-show="TournamentGlobal.loggedIn" href='/users/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
