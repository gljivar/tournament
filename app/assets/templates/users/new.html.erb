<form name="newUser">
  <fieldset>
    <legend>
      New User
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="user[username]"
                   ng-model="user.username"
                   class="text_field"
                   required>
          <span ng-show="newUser.username.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Password 
        </label>
        <div class="controls">
            <input type="password"
                   name="user[password]"
                   ng-model="user.password"
                   class="text_field"
                   required>
          <span ng-show="newUser.password.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
    <div class="form-actions">
      <button class="btn btn-success" ng-click="save()"
        ng-disabled="isClean() || newUser.$invalid">
        <i class="icon-save"></i> Save
      </button>
      <button ng-click="destroy()"
              ng-show="user.id"
              class="btn btn-danger">
              <i class="icon-trash"></i> Delete
      </button>
      <a href="/users" class="btn">Back to users</a>
    </div>
  </fieldset>
</form>

