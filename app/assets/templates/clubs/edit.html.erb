<form name="editClub">
  <fieldset>
    <legend>
      Edit Club
    </legend>
      <div class="control-group">
        <label class="control-label">
          Name
        </label>
        <div class="controls">
            <input type="text"
                   name="club[name]"
                   ng-model="club.name"
                   class="text_field"
                   required>
          <span ng-show="editClub.name.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">
          Country
        </label>
        <div class="controls">
          <select ng-controller="CountriesIndexCtrl" name="club[country_id]" ng-model="club.country_id" ng-options="c.id as c.name for c in countries" required></select>
          <span ng-show="editClub.country_id.$error.required"
                class="help-inline">
            Required
          </span>
        </div>
      </div>
    <div class="form-actions">
      <button class="btn btn-success" ng-click="save()"
        ng-disabled="isClean() || editClub.$invalid">
        Save
      </button>
      <button ng-click="destroy()"
              ng-show="club.id"
              class="btn btn-danger">
              <i class="icon-trash"></i>Delete
      </button>
      <a href="/clubs" class="btn">
        Back to clubs
      </a>
      <a href="/clubs/new" class="btn">
        Add more clubs
      </a>
    </div>
  </fieldset>
</form>

